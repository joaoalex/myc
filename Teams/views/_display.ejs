<div class="form-group row">
  <label class="col-form-label col-sm-2" for="name">Nome</label>
  <div class="col-sm-8">
    <input readonly class="form-control" id="name" value="<%= model.name %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="description">Descrição</label>
  <div class="col-sm-7">
    <input readonly class="form-control" id="description" value="<%= model.description %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="segment">Segmento</label>
  <div class="col-sm-10">
    <textarea readonly class="form-control" cols="20" id="segment" maxlength="30" rows="1"><%= model.segment %></textarea>
  </div>
</div>


<div class="form-group row">
  <label class="col-form-label col-sm-2" for="metodologia">Metodologia</label>
  <div class="col-sm-10">
    <textarea readonly class="form-control" cols="20" id="metodologia" maxlength="30" rows="1"><%= model.metodologia %></textarea>
  </div>
</div>


<div class="form-group row">
  <label class="col-form-label col-sm-2" for="ativo">Ativo</label>
  <div class="col-sm-10">
    <textarea readonly class="form-control" cols="20" id="ativo" maxlength="1" rows="1"><%= model.ativo %></textarea>
  </div>
</div>
